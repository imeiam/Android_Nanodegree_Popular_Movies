<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:weightSum="1" >



    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.05"
        />


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="30dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:orientation="horizontal"
                android:weightSum="1"
                >


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="@color/main_background"
                    android:id="@+id/detail_movie_poster"
                    android:layout_weight="0.4"
                    />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Name Text"
                        android:id="@+id/detail_movie_name"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:background="@color/detail_movie_name_background"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:textSize="25sp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Release Date"
                        android:id="@+id/detail_label_release_Date"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="normal"
                        android:layout_weight="0.10"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:textSize="22sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:text="Mar '16"
                        android:id="@+id/detail_release_Date"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:textSize="22sp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Rating"
                        android:fontFamily="sans-serif-light"
                        android:id="@+id/detail_label_vote_average"
                        android:textStyle="normal"
                        android:layout_weight="0.10"
                        android:gravity="left"
                        android:paddingLeft="5dp"
                        android:textSize="22sp"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.15"
                        android:text="4.5 &#9734;"
                        android:id="@+id/detail_vote_average"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:textSize="22sp"

                        />

                </LinearLayout>



            </LinearLayout>


        </android.support.v7.widget.CardView>











        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="8dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Overview"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"
                    android:id="@+id/detail_label_overview"
                    android:textSize="25sp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_overview"
                    android:text="Good Movie Good Movie Good Movie Good Movie Good Movie Good Movie Good Movie Good Movie Good Movie Good Movie Good Movie Good Movie"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="5dp"
                    android:layout_gravity="left"
                    android:textSize="23sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <!--Videos-->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="8dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/detail_videolist_parent"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Videos"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"
                    android:id="@+id/detail_label_videos"
                    android:textSize="25sp"
                    />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--Reviews-->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="8dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:paddingTop="15dp"
                    android:paddingLeft="15dp"
                    android:id="@+id/detail_label_reviews"
                    android:textSize="25sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_review_listview"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:paddingLeft="25dp"
                    android:orientation="vertical"
                    android:paddingRight="25dp"
                    android:clickable="false"
                    ></LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.05"
        />


</LinearLayout>
